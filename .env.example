# ============================================================================
# INTERACTIVE BROKERS CONFIGURATION
# ============================================================================
# Separate configurations for Paper and Live trading for safety.
# The platform defaults to Paper Trading mode.

# ----------------------------------------------------------------------------
# PAPER TRADING Configuration (Simulated Trading - DEFAULT)
# ----------------------------------------------------------------------------
# Paper trading uses simulated accounts with no real money at risk.
# This is the recommended mode for testing and development.

IB_PAPER_HOST=127.0.0.1
IB_PAPER_PORT=7497              # TWS Paper Trading Port
IB_PAPER_CLIENT_ID=1
IB_PAPER_ACCOUNT=DUB267514      # Your paper trading account number
IB_PAPER_USE_GATEWAY=false      # false = TWS, true = IB Gateway

# ----------------------------------------------------------------------------
# LIVE TRADING Configuration (Real Money - USE WITH CAUTION)
# ----------------------------------------------------------------------------
# Live trading uses real accounts and real money. Only use after thorough
# testing in paper trading mode. Requires explicit confirmation in UI.

IB_LIVE_HOST=127.0.0.1
IB_LIVE_PORT=7496               # TWS Live Trading Port
IB_LIVE_CLIENT_ID=2             # Different client ID from paper
IB_LIVE_ACCOUNT=                # Your live trading account number (fill in)
IB_LIVE_USE_GATEWAY=false       # false = TWS, true = IB Gateway

# ----------------------------------------------------------------------------
# LEGACY Configuration (Backward Compatibility)
# ----------------------------------------------------------------------------
# These are used as fallback for paper trading if IB_PAPER_* vars not set.
# New installations should use IB_PAPER_* and IB_LIVE_* vars instead.

IB_HOST=127.0.0.1
IB_PORT=7497                    # Paper Trading (TWS) - Port 7497
IB_CLIENT_ID=1

# ----------------------------------------------------------------------------
# Port Reference Guide
# ----------------------------------------------------------------------------
# TWS (Trader Workstation):
#   - Paper Trading: 7497
#   - Live Trading:  7496
# 
# IB Gateway:
#   - Paper Trading: 4002
#   - Live Trading:  4001
# 
# API Settings (from TWS/Gateway):
#   - Enable ActiveX and Socket Clients: ✓
#   - Read-Only API: □ (unchecked for trading)
#   - Socket Port: Match your configuration above
#   - Encoding: ASCII 7 (Python, Java, .NET)
#   - Allow connections from localhost only: ✓ (recommended for security)
